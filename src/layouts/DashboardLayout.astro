---
const path = Astro.url.pathname;
const isHome = path.endsWith("/dashboard/home") || path.endsWith("/dashboard");
const isChats = path.endsWith("/dashboard/chats");
const isHospitals = path.endsWith("/dashboard/hospital");
const isAppointments = path.endsWith("/dashboard/appointments");
const isSettings = path.endsWith("/dashboard/settings");
import { ViewTransitions } from "astro:transitions";

import { Toaster } from "sonner";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SAF Connect</title>
    <ViewTransitions />
  </head>
  <body>
    <Toaster richColors client:idle />
    <header
      class="flex justify-between p-2 bg-fixed shadow-md items-between bg-sky-100"
    >
      <div class="flex px-5">
        <span class="py-2 text-3xl font-semibold text-sky-800">
          SAF Connect
        </span>
      </div>
      <div class="flex items-center self-center space-x-4 mr-2">
        <a href="/dashboard/notifs">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="size-8 cursor-pointer text-sky-800"
            viewBox="0 0 24 24"
            ><path
              fill="currentColor"
              d="M12 22q-.825 0-1.412-.587T10 20h4q0 .825-.587 1.413T12 22m-8-3v-2h2v-7q0-2.075 1.25-3.687T10.5 4.2v-.7q0-.625.438-1.062T12 2t1.063.438T13.5 3.5v.325q-.275.55-.4 1.125T13 6.125q-.25-.05-.488-.088T12 6q-1.65 0-2.825 1.175T8 10v7h8v-6.425q.45.2.963.313T18 11v6h2v2zM18 9q-1.25 0-2.125-.875T15 6t.875-2.125T18 3t2.125.875T21 6t-.875 2.125T18 9"
            ></path></svg
          ></a
        >
        <img
          src="https://picsum.photos/100/100"
          class="size-8 rounded-full ring ring-sky-800"
        />
      </div>
      <!-- <Menu
        options={[
          {
            label: "Wards",
            href: "/wards",
          },
          {
            label: "Beds",
            href: "/beds",
          },
          {
            label: "Doctors",
            href: "/doctors",
          },
          {
            label: "Labs",
            href: "/labs",
          },
        ]}
        className="self-center"
        alt="menu"
      /> -->
    </header>
    <main class="container px-4 mx-auto mt-4">
      <slot />
    </main>
    <footer
      class={"container fixed bottom-0 mt-5 bg-white rounded-xl shadow-lg"}
    >
      <div
        class="container grid grid-cols-5 py-2 text-xs text-center text-neutral-400 mx-auto"
      >
        <a
          href="/dashboard/home"
          class:list={[
            "hover:text-sky-500 hover:cursor-pointer",
            isHome && "text-sky-400",
          ]}
        >
          <svg
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            class="mx-auto size-6"
            viewBox="0 0 24 24"
          >
            <path
              fill="currentColor"
              d="m12 5.69l5 4.5V18h-2v-6H9v6H7v-7.81zM12 3L2 12h3v8h6v-6h2v6h6v-8h3"
            ></path>
          </svg>
          <span>Home</span>
        </a>
        <a
          href="/dashboard/chats"
          class:list={[
            "block hover:text-sky-500 hover:cursor-pointer",
            isChats && "text-sky-400",
          ]}
        >
          <svg
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            class="mx-auto size-6"
            viewBox="0 0 256 256"
          >
            <path
              fill="currentColor"
              d="M168 112a8 8 0 0 1-8 8H96a8 8 0 0 1 0-16h64a8 8 0 0 1 8 8m-8 24H96a8 8 0 0 0 0 16h64a8 8 0 0 0 0-16m72-8a104 104 0 0 1-152.88 91.82l-34.05 11.35a16 16 0 0 1-20.24-20.24l11.35-34.05A104 104 0 1 1 232 128m-16 0a88 88 0 1 0-164.19 44.06a8 8 0 0 1 .66 6.54L40 216l37.4-12.47a7.9 7.9 0 0 1 2.53-.42a8 8 0 0 1 4 1.08A88 88 0 0 0 216 128"
            ></path>
          </svg>
          <span>Chats</span>
        </a>
        <a
          href="/dashboard/hospital"
          class:list={[
            "hover:text-sky-500 hover:cursor-pointer",
            isHospitals && "text-sky-400",
          ]}
        >
          <svg
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            class="mx-auto size-6"
            viewBox="0 0 24 24"
          >
            <path fill="currentColor" d="M20 14h-6v6h-4v-6H4v-4h6V4h4v6h6z"
            ></path>
          </svg>
          <span>Hospitals</span>
        </a>
        <a
          href="/dashboard/appointments"
          class:list={[
            "block hover:text-sky-500 hover:cursor-pointer",
            isAppointments && "text-sky-400",
          ]}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true"
            class="mx-auto size-6"
            viewBox="0 0 14 14"
            ><g
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path
                d="M1.5 2a1 1 0 0 0-1 1v9.5a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1h-2M3.5.5v3m7-3v3M3.5 2h5"
              ></path><path
                d="M6.188 4.562a.5.5 0 0 0-.5.5v1.406H4.28a.5.5 0 0 0-.5.5v1.625a.5.5 0 0 0 .5.5h1.407v1.406a.5.5 0 0 0 .5.5h1.625a.5.5 0 0 0 .5-.5V9.093h1.406a.5.5 0 0 0 .5-.5V6.968a.5.5 0 0 0-.5-.5H8.313V5.062a.5.5 0 0 0-.5-.5z"
              ></path></g
            ></svg
          >

          <span>Appointments</span>
        </a>
        <a
          href="/dashboard/settings"
          class:list={[
            "hover:text-sky-500 hover:cursor-pointer",
            isSettings && "text-sky-400",
          ]}
        >
          <svg
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            class="mx-auto size-6"
            viewBox="0 0 24 24"
          >
            <path
              fill="currentColor"
              d="M12 15.5A3.5 3.5 0 0 1 8.5 12A3.5 3.5 0 0 1 12 8.5a3.5 3.5 0 0 1 3.5 3.5a3.5 3.5 0 0 1-3.5 3.5m7.43-2.53c.04-.32.07-.64.07-.97s-.03-.66-.07-1l2.11-1.63c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.31-.61-.22l-2.49 1c-.52-.39-1.06-.73-1.69-.98l-.37-2.65A.506.506 0 0 0 14 2h-4c-.25 0-.46.18-.5.42l-.37 2.65c-.63.25-1.17.59-1.69.98l-2.49-1c-.22-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64L4.57 11c-.04.34-.07.67-.07 1s.03.65.07.97l-2.11 1.66c-.19.15-.25.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1.01c.52.4 1.06.74 1.69.99l.37 2.65c.04.24.25.42.5.42h4c.25 0 .46-.18.5-.42l.37-2.65c.63-.26 1.17-.59 1.69-.99l2.49 1.01c.22.08.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64z"
            ></path>
          </svg>
          <span class="text-center">Settings</span>
        </a>
      </div>
    </footer>
  </body>
</html>
