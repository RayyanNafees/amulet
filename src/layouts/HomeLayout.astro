---
import Base from "./base.astro";

export interface Props {
  className?: string;
  activeTab?: "home" | "doubts" | "more" | "zhcet" | "tution";
}

const { className = "", activeTab } = Astro.props;

const isZHCET = Astro.url.pathname.startsWith("/zhcet");
const isTution = Astro.url.pathname.startsWith("/tution");
const isHome = Astro.url.pathname.startsWith("/home");
const isMore = Astro.url.pathname.startsWith("/more");
const isDoubts = Astro.url.pathname.startsWith("/doubts");
---

<Base>
  <nav
    class="fixed top-0 flex w-full items-center justify-between bg-slate-200 px-2 py-2"
  >
    <div class="flex items-center space-x-3">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="size-8"
        viewBox="0 0 24 24"
      >
        <path fill="currentColor" d="M3 6h18v2H3zm0 5h18v2H3zm0 5h18v2H3z">
        </path>
      </svg>
      <div>
        <h2 class="text-xl font-bold">AMULET</h2>
        <h3 class="text-xs font-semibold text-slate-600">home</h3>
      </div>
    </div>
    <div class="flex space-x-4">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="size-7 text-slate-600"
        viewBox="0 0 24 24"
      >
        <path
          fill="currentColor"
          d="M10 21h4c0 1.1-.9 2-2 2s-2-.9-2-2m11-2v1H3v-1l2-2v-6c0-3.1 2-5.8 5-6.7V4c0-1.1.9-2 2-2s2 .9 2 2v.3c3 .9 5 3.6 5 6.7v6zm-4-8c0-2.8-2.2-5-5-5s-5 2.2-5 5v7h10z"
        >
        </path>
      </svg>
      <img
        src="https://picsum.photos/100/100"
        alt="user"
        class="size-7 rounded-full border-2 border-slate-500 text-slate-800"
      />
    </div>
  </nav>
  <main class={`px-4 py-20 ${className}`}>
    <slot />

    <footer
      class="fixed bottom-0 flex w-full justify-evenly bg-slate-200 p-1 text-xs left-0"
    >
      <a
        href="/zhcet"
        class={`flex flex-col items-center justify-end rounded ${isZHCET ? "bg-slate-400" : "bg-slate-200"} px-4 py-2`}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-7 text-slate-800"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            d="M11.5 1L2 6v2h19V6m-5 4v7h3v-7M2 22h19v-3H2m8-9v7h3v-7m-9 0v7h3v-7z"
          >
          </path>
        </svg>
        <span class="font-semibold text-slate-700">zhcet</span>
      </a>
      <a
        href="/tution"
        class={`flex flex-col items-center justify-end rounded  ${isTution ? "bg-slate-400" : "bg-slate-200"}  px-4 py-2`}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-7 text-slate-800"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            d="M13.09 20c.12.72.37 1.39.72 2H6c-1.11 0-2-.89-2-2V4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v9.09c-.33-.05-.66-.09-1-.09s-.67.04-1 .09V4h-5v8l-2.5-2.25L8 12V4H6v16zM17 16v6l5-3z"
          >
          </path>
        </svg>
        <span class="font-semibold text-slate-700">tution</span>
      </a>
      <a
        href="/home"
        class={`flex flex-col items-center justify-end rounded  ${isHome ? "bg-slate-400" : "bg-slate-200"}  px-4 py-2`}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-7 text-slate-800"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            d="M12 3L1 9l4 2.18v6L12 21l7-3.82v-6l2-1.09V17h2V9zm6.82 6L12 12.72L5.18 9L12 5.28zM17 16l-5 2.72L7 16v-3.73L12 15l5-2.73z"
          >
          </path>
        </svg>
        <span class="font-semibold text-slate-700">home</span>
      </a>
      <a
        href="/doubts"
        class={`flex flex-col items-center justify-end rounded  ${isDoubts ? "bg-slate-400" : "bg-slate-200"}  px-4 py-2`}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-7 text-slate-800"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            d="M19 2H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h4l3 3l3-3h4c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2m0 16h-4.83l-.59.59L12 20.17l-1.59-1.59l-.58-.58H5V4h14zm-8-3h2v2h-2zm1-8c1.1 0 2 .9 2 2c0 2-3 1.75-3 5h2c0-2.25 3-2.5 3-5c0-2.21-1.79-4-4-4S8 6.79 8 9h2c0-1.1.9-2 2-2"
          >
          </path>
        </svg>
        <span class="font-semibold text-slate-700">doubts</span>
      </a>
      <a
        href="/more"
        class={`mr-2 flex flex-col items-center justify-end rounded  ${isMore ? "bg-slate-400" : "bg-slate-200"}  px-3 py-2`}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-7 text-slate-800"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            d="M16 12a2 2 0 0 1 2-2a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2m-6 0a2 2 0 0 1 2-2a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2m-6 0a2 2 0 0 1 2-2a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2"
          >
          </path>
        </svg>
        <span class="font-semibold text-slate-700">more</span>
      </a>
    </footer>
  </main>
</Base>
