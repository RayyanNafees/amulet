---
import { $user } from "@/stores/user";
import Base from "../layouts/base.astro";
const data = $user.get()

console.log(data)

if (data.name) return Astro.redirect("/home");
---

<Base>
  <main class="flex min-h-screen flex-col justify-center text-center">
    <h1 class="text-5xl font-bold text-slate-600">AMULET</h1>
    <h2 class="text-sm font-semibold text-slate-600">
      Read in the name of thy Lord☝️
    </h2>
    <p class="text-sm font-light text-slate-600 py-8">
      Your digital study guide as an AMU student
    </p>

    <form
      method="POST"
      action="/api/onboarding"
      class="mx-4 flex flex-col gap-2 rounded-xl border-2 border-slate-200 p-4 text-start text-slate-600"
    >
      <label for="enroll" class="text-xs font-semibold"
        >Enrollment Number
      </label>
      <input
        type="text"
        name="enroll"
        placeholder="GP1824"
        class="rounded-md border-none bg-slate-100 text-slate-700 font-semibold mb-4"
      />

      <button
        type="submit"
        class="rounded-md bg-slate-600 py-1 font-semibold uppercase text-slate-50"
        >continue</button
      >
    </form>
  </main>
  <footer class="fixed bottom-0 text-sm py-2 text-center w-full bg-slate-300">
    Build with 💔 by <a
      href="https://github.com/RayyanNafees"
      class="underline italic">Diggaj</a
    >
  </footer></Base
>
